#!/bin/sh

# Capture original working directory BEFORE changing to cheater dir
export CHEATER_LAUNCH_DIR="$PWD"

if [ -L $0 ] ; then
    DIR=$(dirname "$(readlink -f "$0")") ;
else
    DIR=$(dirname "$0") ;
fi ;

cd "$DIR"

# Activate virtual environment if it exists
if [ -f "env/bin/activate" ]; then
    . env/bin/activate
fi

export TERM='xterm-256color'
exec python3 -m cheater "$@"
